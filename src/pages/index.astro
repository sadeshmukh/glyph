---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Glyph">
  <main
    class="min-h-screen flex flex-col items-center justify-center space-y-12 p-5"
  >
    <div class="flex items-center space-x-6">
      <div class="w-16 h-16 rounded-full bg-rose-500"></div>
      <div
        class="w-16 h-16 bg-sky-400 rotate-45"
        style="clip-path: polygon(50% 0%, 100% 100%, 0% 100%)"
      >
      </div>
      <div class="w-16 h-16 bg-emerald-400"></div>
    </div>

    <div class="flex space-x-8">
      <a
        href="/game"
        class="w-20 h-20 flex items-center justify-center rounded-lg bg-green-600 hover:bg-green-500 transition"
        aria-label="Play"
      >
        <span class="material-symbols-outlined text-stone-100 text-5xl">
          play_arrow
        </span>
      </a>
      <button
        class="w-20 h-20 flex items-center justify-center rounded-lg bg-orange-500 hover:bg-orange-400 transition"
        aria-label="Settings"
      >
        <span class="material-symbols-outlined text-stone-100 text-5xl">
          settings
        </span>
      </button>
    </div>
  </main>
</Layout>
