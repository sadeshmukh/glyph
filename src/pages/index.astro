---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Glyph">
  <main
    class="min-h-screen flex flex-col items-center justify-center space-y-12 p-5"
  >
    <div class="flex items-center space-x-6">
      <div class="w-16 h-16 rounded-full bg-rose-500"></div>
      <div
        class="w-16 h-16 bg-sky-400 rotate-45"
        style="clip-path: polygon(50% 0%, 100% 100%, 0% 100%)"
      >
      </div>
      <div class="w-16 h-16 bg-emerald-400"></div>
    </div>

    <div class="flex space-x-8">
      <a
        href="/game"
        class="w-20 h-20 flex items-center justify-center rounded-lg bg-green-600 hover:bg-green-500 transition"
        aria-label="Play"
      >
        <svg
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="w-12 h-12 text-stone-100"
        >
          <polygon points="5 3 19 12 5 21 5 3"></polygon>
        </svg>
      </a>
      <button
        class="w-20 h-20 flex items-center justify-center rounded-lg bg-orange-500 hover:bg-orange-400 transition"
        aria-label="Settings"
      >
        <svg
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="w-10 h-10 text-stone-100"
        >
          <circle cx="12" cy="12" r="3"></circle>
          <path
            d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 1 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09a1.65 1.65 0 0 0-1-1.51 1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 1 1-2.83-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09a1.65 1.65 0 0 0 1.51-1 1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 1 1 2.83-2.83l.06.06a1.65 1.65 0 0 0 1.82.33h.09a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 1 1 2.83 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82v.09a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z"
          ></path>
        </svg>
      </button>
    </div>
  </main>
</Layout>
